<Window x:Class="Northwind.Gui.Desktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Northwind.Gui.Desktop"
        mc:Ignorable="d"
        d:DesignWidth="1280"
        d:DesignHeight="720"
        Title="Northwind Order Administration System"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <!-- #region Columns and Rows-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <!-- #endregion-->

        <!-- #region Order Selection Grid -->
        <Grid Grid.Column="0">
            <ListView>

            </ListView>
        </Grid>
        <!-- #endregion -->

        <!-- #region Order Detail Grid-->
        <Grid Grid.Column="1">
            <Border BorderBrush="#FFABADB3"
                    BorderThickness="0,1,1,1">

            </Border>
        </Grid>
        <!-- #endregion -->
    </Grid>
</Window>